<html>

<head>
	<title>Register - Main Menu</title>
	<meta name="viewport" content="width=device-width, initial-scale=1"> 

	<link rel="stylesheet" type="text/css" href="/styles/master.css">

	<script type="text/javascript" src="/scripts/master.js" defer></script>
	<script type="text/javascript" src="/scripts/mainMenu.js" defer></script>
</head>

<body>

	<div class="header">
		<h1 class="primary-message">Main Menu</h1>
	</div>
		
	<div id="main" class="main">
		<div id="error" <% if (!locals.errorMessage || (locals.errorMessage === "")) { %> class="hidden" <% } %>>
			<h4 id="errorMessage" class="error-message">
				<% if (locals.errorMessage && (locals.errorMessage !== "")) { %>
					<%= locals.errorMessage %>
				<% } %>
			</h4>
		</div>

		<div>
			<a href="/transaction/" class="button">Start Txn</a>
		</div>
		<br />
		<br />
		<div>
			<a href="/productListing/" class="button">Prod List</a>
		</div>
		<br />
		<br />

		<div <% if (!locals.isElevatedUser) { %> class="hidden" <% } %>>
			<a href="/cashierReport/" class="button">Cashier Report</a>
			<br /><br /><br />
			<a href="/createEmployee/" class="button">Emp Details</a>
			<br /><br /><br />
			<a href="/salesReport/" class="button">Sales Report</a>
			<br /><br /><br />
		</div>
	</div>

	<div class="hidden">
		<input type="checkbox" id="isRefreshed" class="hidden">
		<script type="text/javascript">
			window.onunload = function() {
				const isRefreshedElement = document.getElementById("isRefreshed");

				if(!isRefreshedElement.checked) {
					isRefreshedElement.checked = true;
				} else {
					isRefreshedElement.checked = false;
					location.reload();
				}
			}
		</script>
	</div>

	<div class="footer">
		<a href="/signIn/"><img id="signOutImage" src="/images/Sign-Out.png" alt="Sign Out" class="footer" /></a>
	</div>
		
</body>

</html>